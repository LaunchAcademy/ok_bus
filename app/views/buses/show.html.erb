<h1>Line <%= @bus.number %></h1>

<h2><%= @bus.inbound %> - <%= @bus.outbound %></h2>

<h3>Reviews:</h3>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <p>
        <%= review.user.username %>
        rode bus <%= @bus.number %>
        towards <%= review.ride.direction %>
        on a <%= review.ride.day %>
        between <%= review.ride.timeframe %>
      </p>
      <h3><%= review.rating %> out of 5</h3>
      <p><%= review.body %></p>
       <% if current_user == review.user %>
        <%= link_to "Edit", edit_bus_review_path(@bus, review) %> | <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are you sure?" } %>
       <% end %>
    </li>
  <% end %>
</ul>

  <% if user_signed_in? %>
    <%= link_to "New Review", new_bus_review_path(@bus) %>
  <% end %>

