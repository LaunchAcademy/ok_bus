<h1 class="text-center">Line <%= @bus.number %></h1>
<h3 class="text-center subheader">
  <%= @bus.inbound %><br>
  <%= @bus.outbound %>
</h3>

<div class="row">
  <h2>Reviews</h2>
  <ul class="no-bullet">
    <% @reviews.each do |review| %>
      <li>
      <hr>
      <div class="row">
        <div class="small-1 column">
          <ul><li>Vote</li></ul>
        </div>
        <div class="small-3 column">
          <h3 class="text-center"><%= review.rating %> out of 5</h3>
        </div>
        <div class="small-6 column">
          <p>
            <%= review.user.username.upcase %>
            rode bus <%= @bus.number %>
            <%= review.ride.direction %>
            on a <%= review.ride.day %>
            between <%= review.ride.timeframe %>
          </p>
          <p><%= review.body %></p>
        </div>
        <div class="small-2 column">
          <ul><li>Delete</li><li>Edit</li></ul>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
  <hr>
</div>

<div class="row">
  <%= link_to "Review This Bus", new_bus_review_path(@bus), class: "button" %>
</div>
