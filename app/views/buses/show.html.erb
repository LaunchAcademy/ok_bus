<h1>Line <%= @bus.number %></h1>

<h2><%= @bus.inbound %> - <%= @bus.outbound %></h2>

<h3>Reviews:</h3>

<ul>
  <% @reviews.each do |review| %>
    <li id="<%= "review-#{review.id}" %>">
      <ul>
        <% if user_signed_in? %>
          <li class="upvote">
            <%= link_to 'Up', bus_review_votes_path(@bus,
                                                    review,
                                                    direction: "up"
                                                    ), method: :POST %>
            <%= review.up_votes %> votes
          </li>
          <li class="downvote">
            <%= link_to 'Down', bus_review_votes_path(@bus,
                                                      review,
                                                      direction: "down"
                                                      ), method: :POST %>
            <%= review.down_votes %> votes
          </li>
        <% end %>
      </ul>
      <p>
        <%= review.user.username %>
        rode bus <%= @bus.number %>
        towards <%= review.ride.direction %>
        on a <%= review.ride.day %>
        between <%= review.ride.timeframe %>
      </p>
      <h3><%= review.rating %> out of 5</h3>
      <p><%= review.body %></p>
    </li>
    <% if current_user == review.user %>
      <%= link_to 'Delete', bus_review_path(@bus, review), method: :delete,
                                                           data: { confirm:
                                                                   'Are you sure?'
                                                                    } %>
    <% end %>
  <% end %>
</ul>

  <% if user_signed_in? %>
    <%= link_to "New Review", new_bus_review_path(@bus) %>
  <% end %>

