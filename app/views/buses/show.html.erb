<div class="row">
  <div class="small-2 column">
    <h1 class="text-right"><%= @bus.number %></h1>
  </div>
  <div class="small-10 column">
    <h3 class="text-left subheader">
      <%= @bus.inbound %><br>
      <%= @bus.outbound %>
    </h3>
  </div>
</div>
<div class="row">
  <% if user_signed_in? %>
    <%= link_to "New Review", new_bus_review_path(@bus), class: "button expand"  %>
  <% end %>
</div>

<div class="row">
  <ul class="no-bullet">
    <% @reviews.each do |review| %>
      <li>
      <div class="row">
        <div class="small-2 column">
          <ul>
            <li>
              <a class="clearing-thumbs">
              <img src=<%= review.user.profile_photo %>>
              </a>
            </li>
          </ul>
        </div>
        <div class="small-8 column">
          <p>
            <%= review.user.username.upcase %>
            rode bus <%= @bus.number %>
            <%= review.ride.direction %>
            on a <%= review.ride.day %>
            between <%= review.ride.timeframe %>
          </p>
          <p><%= review.rating %> out of 5</p>
          <p><%= review.body %></p>
        </div>
        <div class="small-2 column">
          <ul>
            <li>
              <% if current_user == review.user %>
                <%= link_to 'Delete',
                    bus_review_path(@bus, review),
                    method: :delete,
                    data: { confirm:
                            'Are you sure?'
                            } %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <hr>
      </li>
    <% end %>
  </ul>
</div>
