<h1 class="text-center">Bus Lines</h1>

<div class="row">
  <div class="small-4 column">
    <h3 class="subheader text-center">Inbound</h3>
  </div>
  <div class="small-4 column">
    <h1 class="text-center"></h1>
  </div>
  <div class="small-4 column">
    <h3 class="subheader text-center">Outbound</h3>
  </div>
</div>

<% @buses.each do |bus| %>
  <ul class="no-bullet">
    <li>
      <div class="row">
        <hr>
        <div class="small-4 column">
          <h5 class="text-center"><%= bus.inbound %></h5>
        </div>
        <div class="small-4 column">
            <h2 class="text-center">
              <%= link_to bus.number, bus_path(bus), class: "large button expand" %>
            </h2>
        </div>
        <div class="small-4 column">
          <h5 class="text-center"><%= bus.outbound %></h5>
        </div>
      </div>
    </li>
  </ul>
<% end %>
